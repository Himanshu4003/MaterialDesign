<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="DesignTheme" parent="Theme.AppCompat.NoActionBar">

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimarydark</item>

        <!-- colorAccent is used as the default value for colorControlActivated,
          which is used to tint widgets -->
        <item name="colorAccent">@color/accent</item>

        <item name="drawerArrowStyle">@style/Designtheme.DrawerArrowStyle</item>


        <!--<item name="android:tabWidgetStyle">@style/DesignTabLayout</item>-->


    </style>


    <style name="Designtheme.DrawerArrowStyle" parent="@style/Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>


    <style name="DesignTabLayout" parent="Widget.Design.TabLayout">


        <item name="tabIndicatorColor">@color/tab_indicator</item>


    </style>

    <style name="DesignEditext" parent="Widget.AppCompat.EditText">
        <item name="android:textColorHint">@color/accent</item>
        <item name="android:textColor">@color/colorPrimary</item>

    </style>


    <!--<item name="tabBackground">@color/tab_bg</item>-->

</resources>
